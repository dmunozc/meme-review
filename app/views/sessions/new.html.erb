<%= provide(:title, t('.title'))%>
<div class="container">
  <div class="row need_margin_body">
    <h5>Log In</h5>
    <%= form_for(:session, url: login_path,html:{class:"col s12"}) do |f| %>
      <div class="row">
        <div class="input-field col s12">
        <%= f.text_field :email, id:"email",class: "validate"%>
        <%= f.label :email,for:"email"%>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
        <%= f.password_field :password, id:"password",class: "validate"%>
        <%= f.label :password,for:"password"%>
        <%= link_to t('.forgot_password'), new_password_reset_path%>
        
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
        <span><%=t('.remember_me')%></span>
        <%= f.check_box :remember_me%>
        <%= f.label :remember_me, class: "checkbox inline" do%>
        </div>
      </div>
        
      <%end%>
      
      <%=f.submit t('.button'), class: "btn"%>
    <%end%>
    
  </div>
  <div class="row">
    <p><%=t('.new_user')%> <%=link_to t('.sign_up'), signup_path%></p>
  </div>
</div>