<div class="col s12 m6 l4">
  <div class="card hoverable sticky-action">
    <div class="card-image z-depth-1 card-image-main">
      <picture>
        <source
          media="(min-width: 993px)" 
          data-srcset="<%= asset_url("meme-main/" + meme.image_name + "_large_1x.webp")%> 1x, <%= asset_url("meme-main/" + meme.image_name + "_large_2x.webp")%> 2x" 
          type="image/webp">
        <source
          media="(min-width: 993px)" 
          data-srcset="<%= asset_url("meme-main/" + meme.image_name + "_large_1x.jpg")%> 1x, <%= asset_url("meme-main/" + meme.image_name + "_large_2x.jpg")%> 2x" 
          type="image/jpeg">
        <source
          media="(min-width: 601px)"
          data-srcset="<%= asset_url("meme-main/" + meme.image_name + "_medium_1x.webp")%> 1x, <%= asset_url("meme-main/" + meme.image_name + "_medium_2x.webp")%> 2x"
          type="image/webp">
        <source
          media="(min-width: 601px)"
          data-srcset="<%= asset_url("meme-main/" + meme.image_name + "_medium_1x.jpg")%> 1x, <%= asset_url("meme-main/" + meme.image_name + "_medium_2x.jpg")%> 2x"
          type="image/jpeg">
        <source
          media="(max-width: 600px)"
          data-srcset="<%= asset_url("meme-main/" + meme.image_name + "_small_1x.webp")%> 1x, <%= asset_url("meme-main/" + meme.image_name + "_small_2x.webp")%> 2x"
          type="image/webp">
        <source
          media="(max-width: 600px)"
          data-srcset="<%= asset_url("meme-main/" + meme.image_name + "_small_1x.jpg")%> 1x, <%= asset_url("meme-main/" + meme.image_name + "_small_2x.jpg")%> 2x"
          type="image/jpeg">
        <img class="lazyload responsive-img image-main" data-src="<%= asset_url("meme-main/" + meme.image_name + "_large_1x.jpg")%>" alt="<%= "Slide " + meme.image_name%>" />
      </picture>
    </div>
    <div class="card-content">
      <span class="card-title grey-text text-darken-4 activator"><%=meme.name%><i class="material-icons right">more_vert</i></span>
      <p class="flow-text grey-text">Rating:</p>
      <picture>
        <source
          media="(min-width: 993px)" 
          data-srcset="<%= asset_url("meme-rating/" + meme.rating_name + "_large_1x.webp")%> 1x, <%= asset_url("meme-rating/" + meme.rating_name + "_large_2x.webp")%> 2x" 
          type="image/webp">
        <source
          media="(min-width: 993px)" 
          data-srcset="<%= asset_url("meme-rating/" + meme.rating_name + "_large_1x.jpg")%> 1x, <%= asset_url("meme-rating/" + meme.rating_name + "_large_2x.jpg")%> 2x" 
          type="image/jpeg">
        <source
          media="(min-width: 601px)"
          data-srcset="<%= asset_url("meme-rating/" + meme.rating_name + "_medium_1x.webp")%> 1x, <%= asset_url("meme-rating/" + meme.rating_name + "_medium_2x.webp")%> 2x"
          type="image/webp">
        <source
          media="(min-width: 601px)"
          data-srcset="<%= asset_url("meme-rating/" + meme.rating_name + "_medium_1x.jpg")%> 1x, <%= asset_url("meme-rating/" + meme.rating_name + "_medium_2x.jpg")%> 2x"
          type="image/jpeg">
        <source
          media="(max-width: 600px)"
          data-srcset="<%= asset_url("meme-rating/" + meme.rating_name + "_small_1x.webp")%> 1x, <%= asset_url("meme-rating/" + meme.rating_name + "_small_2x.webp")%> 2x"
          type="image/webp">
        <source
          media="(max-width: 600px)"
          data-srcset="<%= asset_url("meme-rating/" + meme.rating_name + "_small_1x.jpg")%> 1x, <%= asset_url("meme-rating/" + meme.rating_name + "_small_2x.jpg")%> 2x"
          type="image/jpeg">
        <img class="lazyload responsive-img image-rating center" data-src="<%= asset_url("meme-rating/" + meme.rating_name + "_large_1x.jpg")%>" alt="<%= "Slide " + meme.rating_name%>" />
      </picture>
    </div>
    <div class="card-action">
      <%= link_to(meme.yt_title, meme.yt_link, target: "_blank")%>
    </div>
    <div class="card-reveal">
      <span class="card-title grey-text text-darken-4">Historical Facts<i class="material-icons right">close</i></span>
      <blockquote><%=meme.main_quote%></blockquote>
      <ul class="collection with-header">
        <li class="collection-header"><h5>Trivia</h5></li>
        <%triviaArray = JSON.parse(meme.trivia)%>
        <% triviaArray.each do |trivia| %>
          <li class="collection-item"><%=trivia%></li>
        <%end%>
      </ul>
    </div>
  </div>
</div>